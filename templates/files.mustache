{{!
    @template local_oer/courses

    Navigation elements and courses in card or list form.

    Example context (json):
    {}
}}

{{#shownavigation}}
    <div data-region="filter" class="d-flex align-items-center flex-wrap" aria-label="Course overview controls">
        {{> local_oer/nav-grouping-selector}}
        {{> local_oer/courseinfo}}
        {{> local_oer/preference}}
        {{> local_oer/nav-sort-selector}}
        {{> local_oer/nav-display-selector}}
    </div>
{{/shownavigation}}
<div id="courses-view-{{uniqid}}">
    {{#card}}
        {{> local_oer/view-cards}}
    {{/card}}
    {{#list}}
        {{> local_oer/view-list}}
    {{/list}}
    {{^files}}
        {{> local_oer/no_files_found}}
    {{/files}}
</div>

{{^element.frozen}}
{{#js}}
require(['local_oer/navigation-lazy'], function(action) {
action.initLayoutListener();
action.initSortListener();
action.initGroupingListener();
action.initCourseinfoListener();
action.initPreferenceListener();
action.initSearchListener();
});
{{/js}}
{{/element.frozen}}

