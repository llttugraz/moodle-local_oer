{{!
    @template local_oer/file-action-menu

    This template renders action menu for each course.

    Example context (json):
    {
        "identifier": "oer:moodle@localhost:file:contenthash:ABC123",
        "title": "Title"
    }
}}

<div class="col-sm float-left">
    {{#multiple}}
        <a class="nav-link p-0 m-0 btn-xs" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <i class="icon fa fa-info-circle fa-fw p-0 m-0" style="pointer-events:none"></i>
        </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdownCourselist-{{identifier}}">
            {{#str}} multiplecourses, local_oer{{/str}}
            {{> local_oer/multiplecourses}}
        </div>
    {{/multiple}}
</div>
<div class="col-sm p-0 mr-1" data-oeractionmenu="{{identifier}}">
    <div class="float-right">
        <a href="#" title="{{#str}} edit, moodle{{/str}}"
           class="nav-link btn-xs p-0 m-0" data-action="edit-file" data-identifier="{{identifier}}" data-title="{{title}}">
            <i class="icon fa fa-cog fa-fw p-0 m-0" style="pointer-events:none"></i>
        </a>
    </div>
    {{#coursetofile}}
        <div class="float-right">
            <a href="#" title="{{#str}} coursetofile, local_oer{{/str}}"
               class="nav-link btn-xs mr-3 mt-0 mb-0 ml-0 p-0" data-action="course-to-file" data-identifier="{{identifier}}" data-title="{{title}}">
                <i class="icon fa fa-graduation-cap fa-fw p-0 m-0" style="pointer-events:none"></i>
            </a>
        </div>
    {{/coursetofile}}
</div>
{{#js}}
require(['local_oer/filemenu-lazy'], function(action) {
action.initActionMenuListener("{{{identifier}}}");
});
{{/js}}