{{!
    @template local_oer/main_area

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * Various data about mappings

    Example context (json):
    {
        "wwwroot": "www.moodle.org",
        "allowed": true,
        "releaseinfo": "<p>fancyhtml</p>",
        "card": true,
        "table": false,
        "canmanage": true,
        "downloadurl": "www.moodle.org",
        "disallowed": false
    }
  }}
<section id="local_oer_files_main_area" class="oer" data-courseid="{{courseid}}" data-context="{{context}}">
    {{< local_oer/main-oea-header}}{{/ local_oer/main-oea-header}}
    {{#allowed}}
        <div class="d-flex justify-content-end mb-1">
            {{< local_oer/downloadzip}}{{/ local_oer/downloadzip}}
        </div>
        <div class="alert alert-info">{{#str}} allowed, local_oer{{/str}}</div>
        {{{releaseinfo}}}
        <div>
            <div id="local-oer-overview" role="navigation">
                <div class="card-deck dashboard-card-deck one-row">
                    {{> core_course/placeholder-course }}
                    {{> core_course/placeholder-course }}
                    {{> core_course/placeholder-course }}
                </div>
            </div>
            <div id="local-oer-overview-filelist" class="hidden"></div>
        </div>
        <div id="local-oer-pagination"></div>
    {{/allowed}}
    {{^allowed}}
        {{> local_oer/notallowed}}
    {{/allowed}}
</section>