{{!
    @template local_oer/log

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * Various data about mappings

    Example context (json):
    {
        "wwwroot": "www.moodle.org",
        "courseid": "2",
        "type": "message",
        "message": "error",
        "timeadded": "1223456"
    }
  }}
<table class="flexible generaltable generalbox">
    <tr>
        <th>{{#str}} course{{/str}}</th>
        <th>{{#str}} type, local_oer{{/str}}</th>
        <th>{{#str}} message, local_oer{{/str}}</th>
        <th>{{#str}} plugin {{/str}}</th>
        <th>{{#str}} time{{/str}}</th>
    </tr>
    {{#logs}}
        <tr>
            <td class="text-center"><a href="{{url}}">{{courseid}}</a></td>
            <td class="text-left">{{type}}</td>
            <td class="text-left">{{message}}</td>
            <td class="text-left">{{component}}</td>
            <td class="text-center">{{#userdate}} {{timecreated}}, %Y-%m-%d %H:%M:%S {{/userdate}}</td>
        </tr>
    {{/logs}}
</table>
