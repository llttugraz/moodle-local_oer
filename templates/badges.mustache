{{!
    @template local_oer/tags

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * Various data about mappings

    Example context (json):
    {
        "timeuploadts": 0,
        "origins": [
            {
                "origin": "mod_resource",
                "originname": "File"
            },
            {
                "origin": "mod_folder",
                "originname": "Folder"
            }
        ]
    }
  }}

<div class="d-inline-block">
    {{#timeuploadedts}}
        <span class="ml-1 badge badge-success">{{#str}} released, local_oer {{/str}}</span>
    {{/timeuploadedts}}
    {{^timeuploadedts}}
        {{#upload}}
            <span class="ml-1 badge badge-warning">{{#str}} upload, local_oer {{/str}}</span>
        {{/upload}}
        {{^upload}}
            <span class="ml-1 badge badge-secondary">{{#str}} norelease, local_oer {{/str}}</span>
        {{/upload}}
    {{/timeuploadedts}}
    {{#ignore}}
        <span class="ml-1 badge badge-dark">{{#str}} ignore, local_oer {{/str}}</span>
    {{/ignore}}
</div>